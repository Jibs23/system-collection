[sub_resource type="GDScript" id="GDScript_06tpx"]
script/source = "class_name ActDash extends Action

enum State {
	DASHING,
	COOLDOWN,
	IDLE
}

var current_state: ActDash.State = State.IDLE

@export var cooldown_time: Timer
@export var cooldown_duration: float = 1.0
@export var dash_graph: Curve
@export var dash_distance: float = 20.0
@export var dash_duration: float = .3

var dash_time: float = 0.0

func start_dash(_dir: Vector2) -> void:
	if current_state == State.COOLDOWN: return
	cooldown_time.wait_time = cooldown_duration
	dash_time = 0.0
	current_state = State.DASHING

# TODO: Make dash distance and speed configurable with a curve.
# TODO: Ideally it should determine how quickly the actor moves a designated distance.
func dash(dir: Vector2, delta: float) -> void:
	if current_state == State.COOLDOWN: return
	actor.position += (Vector2(dir) * dash_distance / (dash_duration / delta))
	actor.move_and_slide()
	dash_time += delta
	if dash_time >= dash_duration:
		_on_dash_complete()
	

func _on_dash_complete() -> void:
	current_state = State.COOLDOWN
	cooldown_time.start()
	get_parent().state_ready = false

func _on_cooldown_complete() -> void:
	current_state = State.IDLE
	get_parent().state_ready = true
"

